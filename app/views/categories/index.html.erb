<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg" %>);">
  <div class="container">
    <h1>Cookbook</h1>
    <p>Save your favourite recipes</p>
  </div>
</div>


<!-- app/views/articles/index.html.erb -->
<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>

<!-- for face detection -->
<%= cl_image_tag("IMAGE_WITH_FACE_ID",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>

<h1>View your cookbook categories here</h1>
<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name.capitalize, category_path(category) %> <%= link_to "Delete", category_path(category), data: {turbo_method: :delete, turbo_confirm: "Are you Sure?"}%> </li>
  <% end %>
</ul>

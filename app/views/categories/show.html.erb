<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg" %>);">
  <div class="container">
    <h1>Show page</h1>
  </div>
</div>

<% if @category.photo.attached? %>
  <div class="banner"style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg" %>);">
<%= else %>
   <div class="banner"style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg" %>);">
<% end %>
  <div class="container">
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center py-3">
  <h2>Recipes</h2>
  <%= link_to "Add a recipe", new_category_bookmark_path(@category), class:"btn btn-primary btn-font-white" %>
</div>
<div class="container">

<% @category.bookmarks.each do |bookmark| %>
  <div class="card-recipe">
    <%= image_tag bookmark.recipe.image_url %>
      <div class="p-3">
        <h3><%= bookmark.recipe.name.capitalize %> |</h3>
        <p><%= bookmark.recipe.description %></p>
      </div>
  <div class="card-recipe-infos">
    <h3><%= bookmark.comment %></h3>
    <h3><%= bookmark.recipe.rating %></h3>
    <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you Sure?" } %>
    </div>
</div>
<% end %>

<%= link_to "back to all categories", categories_path %>
<%= link_to "add a new recipe to your list", new_category_bookmark_path(@category) %>
<%= link_to "add a new category", new_category_path %>
